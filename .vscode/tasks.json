{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test",
            "type": "shell",
            "command": "go run .",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "clear": true
            },
            "options": {
                "env": {
                    "GOPATH": "${workspaceFolder}"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "generate",
                "kill"
            ]
        },
        {
            "label": "generate",
            "type": "shell",
            "command": "go generate",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "clear": true
            },
            "options": {
                "env": {
                    "GOPATH": "${workspaceFolder}"
                }
            }
        },
        {
            "label": "postdebugKill",
            "type": "process",
            "command": [
                "${command:workbench.action.tasks.terminate}",
                "${command:workbench.action.acceptSelectedQuickOpenItem}",
            ],
        },
    ]
}